<a class = "user-box" href="<%= user_path(user) %>">
  <div class = "img-container">
    <img class = "user-image" src= "<%= user.photo %>" alt="<%= user.name %>_image">
  </div>
  <div class = "user-info-box">
    <p class = "user-name"><%= user.name %></p>
    <p class = "number-of-posts">Number of posts: <%= user.posts_count %></p>
  </div>
</a>