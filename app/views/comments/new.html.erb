<h1 id = "form-title">Create a New Comment</h1>
<%= form_with(model: [@post, @comment], url: user_post_comments_path(@user, @post)) do |form| %>
  <div class = "form-container">
    <div class="field">
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>

    <div class="actions">
      <%= form.submit 'Create Comment' %>
    </div>
  </div>
<% end %>
